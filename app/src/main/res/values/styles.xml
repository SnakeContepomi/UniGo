<resources>
    <!-- Base Application Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used to theme preference list and items. -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Material</item>
        <!-- Default icon tint for preferences. -->
        <item name="asp_preferenceIconTint">?colorAccent</item>
        <item name="asp_preferenceDialogIconTint">?asp_preferenceIconTint</item>
    </style>

    <!-- RaisedButton Layout -->
    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDarkest</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Signup Toolbar -->
    <style name="SignupToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24px</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- FullImage Toolbar Style-->
    <style name="FullImageToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24px</item>
        <item name="android:background">@color/colorSemiTransparentBlack</item>
    </style>

    <!-- Toolbar Text Style -->
    <style name="ToolbarTitleTextAppearanceMedium">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="ToolbarTitleTextAppearanceNormal">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="ToolbarSubtitleTextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <!-- Hamburger Icon & Back Arrow Icon Style -->
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- Fab MainActivity -->
    <style name="HomeFab" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <!-- New Post Toolbar -->
    <style name="PostToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24px</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Full Width EditText -->
    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Full Width EditText per AlertDialog-->
    <style name="AlertEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/md_grey_300</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="android:hint">@string/toolbar_search_hint</item>
    </style>

</resources>
