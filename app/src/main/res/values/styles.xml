<resources>
    <!-- Base Application Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- RaisedButton Layout -->
    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDarkest</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Signup Toolbar -->
    <style name="SignupToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24px</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Toolbar Text Style -->
    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Hamburger Icon & Back Arrow Icon Style -->
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- Fab MainActivity -->
    <style name="HomeFab" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <!-- Full Width EditText -->
    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
