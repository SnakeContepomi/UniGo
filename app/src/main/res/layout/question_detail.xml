<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">
        <com.github.akashandroid90.imageletter.MaterialLetterIcon
            android:id="@+id/cardq_userPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/empty_profile_pic" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cardq_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/ms_black"
                    android:textStyle="bold"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/cardq_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/md_grey_500"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/cardq_lvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/md_grey_500"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/md_grey_500"
            android:textSize="12sp"
            android:text="@string/detail_cardq_course"/>
        <TextView
            android:id="@+id/cardq_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/cardq_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/ms_black"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/cardq_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorDarkGray"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="end|center_vertical">
        <TextView
            android:id="@+id/cardq_nanswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:textColor="@color/ms_black"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/cardq_rating"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="48dp"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cardq_imgrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/ic_favorite_black_24dp"
                android:contentDescription="@string/detail_rating_desc"/>
            <TextView
                android:id="@+id/cardq_nrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardq_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cardq_imgfavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_black_24dp"
                android:contentDescription="@string/detail_favorite_desc"/>
        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/cardq_btnAnswer"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="88dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/detail_answer"
            android:textColor="@color/colorDarkGray"
            android:theme="@style/FlatButton"/>
    </LinearLayout>
</LinearLayout>