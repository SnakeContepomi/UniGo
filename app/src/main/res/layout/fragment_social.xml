<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.l4digital.fastscroll.FastScrollRecyclerView
        android:id="@+id/recyclerViewSocial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:bubbleColor="@color/colorPrimary"
        app:bubbleTextColor="@color/colorWhite"
        app:handleColor="#999999"
        app:hideScrollbar="true"
        app:showTrack="false"/>

    <LinearLayout
        android:id="@+id/l_social_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <com.pnikosis.materialishprogress.ProgressWheel
            android:layout_width="80dp"
            android:layout_height="80dp"
            wheel:matProg_barColor="#5588FF"
            wheel:matProg_progressIndeterminate="true"/>
    </LinearLayout>

</RelativeLayout>