<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="16dp"
    android:orientation="horizontal">
    <com.github.akashandroid90.imageletter.MaterialLetterIcon
        android:id="@+id/chat_userPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/empty_profile_pic" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/ms_black"
                android:textStyle="bold"
                android:text="Carlo"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/chat_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="07 Apr"
                android:fontFamily="sans-serif"
                android:textColor="@color/md_grey_500"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/chat_lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:ellipsize="end"
            android:lines="1"
            android:text="Ci vediamo allo stesso punto dell'altra volta va bene?"
            android:textColor="@color/md_grey_500"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDividerGray"/>
    </LinearLayout>
</LinearLayout>