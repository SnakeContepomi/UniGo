<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingTop="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <it.unibo.studio.unigo.utils.RoundedImageView
            android:id="@+id/RoundedProfileImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/empty_profile_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Domanda"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="16sp"
                    android:textColor="@color/ms_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif"
                    android:textAlignment="textEnd"
                    android:text="04/04/2017"
                    android:textSize="14sp"
                    android:textColor="@color/md_grey_500"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Materia"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="14sp"
                        android:textColor="@color/md_grey_500"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Inizio Descrizione"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="14sp"
                        android:textColor="@color/md_grey_500"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:layout_gravity="bottom"
                    android:paddingStart="16dp"
                    android:contentDescription="@string/rvq_favorite"
                    android:src="@drawable/ic_star_border_black_24dp"
                    android:tint="@color/md_grey_500"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>