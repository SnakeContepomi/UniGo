<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fullImageToolbar"
        style="@style/FullImageToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearanceNormal"
        android:layout_alignParentTop="true"
        android:elevation="2dp"/>

    <ImageView
        android:id="@+id/fullImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:background="@android:color/black"
        android:src="@drawable/avd_progress_indeterminate_circular"
        android:transitionName="@string/trans_image" />
</RelativeLayout>
